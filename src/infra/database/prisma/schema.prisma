generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum StatusEntrega {
  PENDENTE
  CAMINHO
  CONCLUIDO
}

model Entrega {
  id                    String        @id
  status                StatusEntrega @default(PENDENTE)
  urlComprovanteEntrega String?

  latitude_destino  Float
  longitude_destino Float

  latitude_atual  Float?
  longitude_atual Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Chave Estrangeira
  destinatarioId String
  destinatario   Destinatario @relation(fields: [destinatarioId], references: [id], onDelete: Cascade)

  // Chave Estrangeira (Opcional - Pode nascer sem dono)
  entregadorId String?
  entregador   Entregador? @relation(fields: [entregadorId], references: [id], onDelete: SetNull)

  // Relacionamento 1:N
  movimentacoes Movimentacao[]

  @@map("entregas")
}

model Movimentacao {
  id        String   @id @default(uuid())
  descricao String
  data      DateTime

  // Value Object Coordenada (Opcional)
  latitude  Float?
  longitude Float?

  // Chave Estrangeira
  entregaId String
  entrega   Entrega @relation(fields: [entregaId], references: [id], onDelete: Cascade)

  @@map("movimentacoes")
}

model Pessoa {
  id       String @id @default(uuid())
  nome     String
  cpf      String @unique
  telefone String @unique

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  entregador   Entregador?
  destinatario Destinatario?

  @@map("pessoas")
}

model Entregador {
  id       String @id @default(uuid())
  email    String @unique
  senha    String
  pessoaId String @unique
  pessoa   Pessoa @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento 1:N
  entregas Entrega[]

  @@map("entregadores")
}

model Destinatario {
  id       String @id @default(uuid())
  email    String @unique
  senha    String
  pessoaId String @unique
  pessoa   Pessoa @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento 1:N
  entregas Entrega[]

  @@map("destinatarios")
}
